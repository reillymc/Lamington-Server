{
    "name": "lamington-server",
    "version": "1.3.10",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -rf dist/ && tsc && cp package*.json dist/",
        "start": "NODE_ENV=development nodemon src/index.ts",
        "prod": "npm run migrate:prod && npm run seed:prod && NODE_ENV=production node dist/src/index.js",
        "test": "NODE_ENV=test jest --forceExit",
        "test:coverage": "NODE_ENV=test jest --forceExit --coverage",
        "migrate:dev": "NODE_ENV=development knex migrate:latest --knexfile src/database/knexfile.ts",
        "migrate:prod": "NODE_ENV=production knex migrate:latest --knexfile dist/src/database/knexfile.ts",
        "rollback:dev": "NODE_ENV=development knex migrate:rollback --knexfile src/database/knexfile.ts",
        "seed:dev": "NODE_ENV=development knex seed:run --knexfile src/database/knexfile.ts",
        "seed:prod": "NODE_ENV=production knex seed:run --knexfile dist/src/database/knexfile.ts",
        "setup:dev": "NODE_ENV=development knex migrate:rollback --knexfile src/database/knexfile.ts && NODE_ENV=development knex migrate:latest --knexfile src/database/knexfile.ts && NODE_ENV=development knex seed:run --knexfile src/database/knexfile.ts",
        "setup:test": "NODE_ENV=test knex migrate:rollback --knexfile src/database/knexfile.ts && NODE_ENV=test knex migrate:latest --knexfile src/database/knexfile.ts && NODE_ENV=test knex seed:run --knexfile src/database/knexfile.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.294.0",
        "axios": "^0.27.2",
        "bcrypt": "^5.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "form-data": "^4.0.0",
        "helmet": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^3.1.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.5",
        "sharp": "^0.31.1",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/jest": "^29.5.1",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.5",
        "@types/node": "^18.11.15",
        "@types/sharp": "^0.28.3",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^8.3.0",
        "husky": "^9.1.6",
        "jest": "^29.5.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.0.0",
        "typescript": "^5.2.2"
    }
}
