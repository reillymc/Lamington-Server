{
    "name": "lamington-server",
    "version": "1.7.0",
    "private": true,
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "NODE_ENV=development node --watch --env-file=./.devcontainer/.env --watch-path=openapi.yaml --watch-path=src src/index.ts",
        "prod": "npm run migrate:prod && npm run seed:prod && NODE_ENV=production node src/index.ts",
        "test": "NODE_ENV=test node --test",
        "test:coverage": "NODE_ENV=test node --test --experimental-test-coverage --test-coverage-lines=90 --test-coverage-branches=90 --test-coverage-functions=90 --test-coverage-include=src/**",
        "lint": "biome check",
        "knip": "knip",
        "depcruise": "depcruise src --collapse 3 --output-type dot | dot -T svg > module-dependency-graph.svg",
        "generate:spec": "rm -f ./src/routes/spec/schema.d.ts && npx openapi-typescript ./openapi.yaml --output ./src/routes/spec/schema.d.ts --immutable --array-length",
        "migrate:dev": "knex migrate:latest --knexfile src/database/knexfile.development.ts",
        "migrate:prod": "knex migrate:latest --knexfile src/database/knexfile.production.ts",
        "seed:dev": "knex seed:run --knexfile src/database/knexfile.development.ts",
        "seed:prod": "knex seed:run --knexfile src/database/knexfile.production.ts",
        "rollback:dev": "knex migrate:rollback --knexfile src/database/knexfile.development.ts",
        "setup:dev": "npm run rollback:dev && npm run migrate:dev && npm run seed:dev",
        "setup:test": "knex migrate:rollback --knexfile src/database/knexfile.testing.ts && knex migrate:latest --knexfile src/database/knexfile.testing.ts",
        "postinstall": "npm run generate:spec"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.879.0",
        "bcrypt": "^6.0.0",
        "cheerio": "^1.1.2",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-openapi-validator": "^5.6.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "moment": "^2.30.1",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "openapi-typescript": "^7.10.1",
        "pg": "^8.16.3",
        "sharp": "^0.34.3",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.12",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^22.19.7",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "dependency-cruiser": "^17.2.0",
        "expect": "^30.1.1",
        "knip": "^5.82.1",
        "supertest": "^7.1.4",
        "typescript": "^5.9.3"
    }
}
