{
    "name": "lamington-server",
    "version": "1.3.10",
    "private": true,
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "NODE_ENV=development node --watch --env-file=./.devcontainer/.env src/index.ts",
        "prod": "npm run migrate:prod && npm run seed:prod && NODE_ENV=production node src/index.ts",
        "test": "NODE_ENV=test node --test --import ./tests/globalHooks.ts --test-global-setup ./tests/setupModule.ts",
        "migrate:dev": "knex migrate:latest --knexfile src/database/knexfile.development.ts",
        "migrate:prod": "knex migrate:latest --knexfile src/database/knexfile.production.ts",
        "seed:dev": "knex seed:run --knexfile src/database/knexfile.development.ts",
        "seed:prod": "knex seed:run --knexfile src/database/knexfile.production.ts",
        "rollback:dev": "knex migrate:rollback --knexfile src/database/knexfile.development.ts",
        "setup:dev": "npm run rollback:dev && npm run migrate:dev && npm run seed:dev",
        "setup:test": "knex migrate:rollback --knexfile src/database/knexfile.testing.ts && knex migrate:latest --knexfile src/database/knexfile.testing.ts && knex seed:run --knexfile src/database/knexfile.testing.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.294.0",
        "bcrypt": "^5.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "form-data": "^4.0.0",
        "helmet": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^3.1.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.5",
        "sharp": "^0.31.1",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.5",
        "@types/node": "^22.18.0",
        "@types/sharp": "^0.28.3",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^8.3.0",
        "expect": "^30.1.1",
        "husky": "^9.1.6",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
